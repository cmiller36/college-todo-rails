<div class="container">
  <h3><%= @college.name %><br><br></h3>
</div>

<br>


<div class="container">
  <div class="col-sm-6">
    <div class="panel panel-primary bootcards-richtext">
      <div class="panel-heading">
         <h3 class="panel-title "><%= @college.name %> Visit Countdown</h3>
      </div>
      <div class="panel-body">
        <% if current_user && current_user.id == @college.user.id %>
          <%= ((@college.college_visit.to_time - Time.now)/1.day).ceil %>  days until your visit                       
        <% end %>
      </div>
    </div>
  </div>
</div>